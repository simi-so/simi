<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <layout>
        <hbox spacing="false">
            <!-- Übersteuern der caption des upload button ist nicht einfach möglich -> fallback auf upload, download -->
            <button id="styleDownloadBtn" caption="Download"/>
            <hbox width="10"/>
            <upload id="styleUploadBtn" fileStoragePutMode="MANUAL" permittedExtensions=".qml,.zip"/>
            <button id="styleDeleteBtn" icon="REMOVE"/>
            <hbox width="10"/>
            <label id="styleLabel" align="MIDDLE_LEFT"/>
        </hbox>
    </layout>
</fragment>
