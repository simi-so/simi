<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="Externe Tabelle"
        focusComponent="form">
    <data>
        <instance id="externalTableDc"
                  class="ch.so.agi.simi.entity.data.ExternalTable">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="externalTableDc">
            <column width="350px">
                <textField id="tableNameField" property="tableName"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
