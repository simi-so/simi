<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://mapEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.product.map">
    <data>
        <instance id="dataProductDc"
                  class="ch.so.agi.simi.entity.product.Map">
            <view extends="_local">
                <property name="pubScope" view="_minimal"/>
                <property name="singleActors" view="_minimal">
                    <property name="singleActor" view="_minimal">
                        <property name="title"/>
                    </property>
                    <property name="sort"/>
                    <property name="visible"/>
                    <property name="transparency"/>
                </property>
            </view>
            <loader/>
            <collection id="propertiesInListDc" property="singleActors"/>
        </instance>
        <collection id="singleActorsDc" class="ch.so.agi.simi.entity.product.SingleActor">
            <loader id="singleActorsDl">
                <query>
                    <![CDATA[select e from simiProduct_SingleActor e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <layout expand="propertiesInListBox" spacing="true">
        <form id="form" dataContainer="dataProductDc">
            <column width="350px">
                <textField id="identifierField" property="identifier"/>
                <textField id="titleField" property="title"/>
                <fragment id="pubScopeFragment" screen="simiProduct_PubScopeFragment" caption="msg://ch.so.agi.simi.entity.product/DataProduct.pubScope">
                    <properties>
                        <property name="filterProperty" value="forMap"/>
                    </properties>
                </fragment>
                <dateField id="releasedAtField" property="releasedAt"/>
                <textField id="releasedThroughField" property="releasedThrough"/>
                <checkBox id="backgroundField" property="background"/>
                <textField id="wgcUrlValueField" property="wgcUrlValue"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
            </column>
            <column width="350px">
                <textArea id="descriptionField" property="description" rows="5" rowspan="3"/>
                <textArea id="keywordsField" property="keywords" rows="5" rowspan="3"/>
                <textArea id="synonymsField" property="synonyms" rows="5" rowspan="3"/>
            </column>
        </form>
        <groupBox id="propertiesInListBox" caption="Layer" expand="propertiesInListTable">
            <table id="propertiesInListTable" dataContainer="propertiesInListDc" width="100%" editable="true" multiselect="true">
                <actions>
                    <action id="addSingleActor" caption="Hinzuf端gen" icon="ADD_ACTION"/>
                    <action id="addSingleActorsFromLayerGroup" caption="Aus Gruppe 端bernehmen ..." icon="ADD_ACTION"/>
                    <action id="exclude" type="remove" caption="Ausschliessen"/>
                    <action id="sortAction" caption="Sortieren" icon="SORT"/>
                </actions>
                <columns>
                    <column id="singleActor" editable="true" optionsContainer="singleActorsDc" caption="Kindebene" captionProperty="entityName"/>
                    <column id="visible" editable="true"/>
                    <column id="transparency" editable="true"/>
                    <column id="sort" editable="true"/>
                </columns>
                <buttonsPanel>
                    <button id="btnPilAddSingleActor" caption="Kindebene verkn端pfen" icon="ADD_ACTION" primary="true"/>
                    <button id="btnPilAddSingleActorsFromLayerGroup" caption="Aus Gruppe 端bernehmen ..." icon="ADD_ACTION"/>
                    <button id="btnPilExclude" action="propertiesInListTable.exclude"/>
                    <button id="btnPilSortAction" caption="Sortieren" icon="SORT"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
