<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="Facadelayer - Edit"
        focusComponent="form">
    <data>
        <instance id="dataProductDc"
                  class="ch.so.agi.simi.entity.product.non_dsv.FacadeLayer">
            <view extends="_local">
                <property name="pubScope" view="_minimal"/>
                <property name="dataSetViews" view="_minimal">
                    <property name="dataSetView" view="_minimal"/>
                    <property name="sort"/>
                    <property name="transparency"/>
                    <property name="facadeLayer" view="_minimal"/>
                </property>
            </view>
            <loader/>
            <collection id="propertiesInFacadeDc" property="dataSetViews"/>
        </instance>
        <collection id="dataSetViewsDc" class="ch.so.agi.simi.entity.product.datasetview.DataSetView">
            <loader id="dataSetViewsDl">
                <query>
                    <![CDATA[select e from simiProduct_DataSetView e order by e.identifier]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <actions>
        <action id="convertToLayerGroup" caption="In LayerGroup umwandeln" icon="EXCHANGE"/>
    </actions>
    <layout expand="dataSetViewsBox" spacing="true">
        <form id="form" dataContainer="dataProductDc">
            <column width="350px">
                <textField id="identifierField" property="identifier"/>
                <textField id="titleField" property="title"/>
                <fragment id="pubScopeFragment" screen="simiProduct_PubScopeFragment" caption="msg://ch.so.agi.simi.entity.product/DataProduct.pubScope">
                    <properties>
                        <property name="filterProperty" value="forGroup"/>
                    </properties>
                </fragment>
                <dateField id="releasedAtField" property="releasedAt"/>
                <textField id="releasedThroughField" property="releasedThrough"/>
                <textField id="transparencyField" property="transparency"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
            </column>
            <column width="350px">
                <textArea id="descriptionField" property="description" rows="5" rowspan="3"/>
                <textArea id="keywordsField" property="keywords" rows="5" rowspan="3"/>
                <textArea id="synonymsField" property="synonyms" rows="5" rowspan="3"/>
            </column>
        </form>
        <groupBox id="dataSetViewsBox" caption="Enthaltene Views">
            <table id="propertiesInFacadeTable" dataContainer="propertiesInFacadeDc" width="100%" height="100%" editable="true"
                   reorderingAllowed="false" settingsEnabled="false">
                <actions>
                    <action id="unlink" type="remove" caption="Verknüpfung löschen">
                        <properties>
                            <property name="confirmation" value="false"/>
                        </properties>
                    </action>
                </actions>
                <columns>
                    <column id="dataSetView" editable="true" optionsContainer="dataSetViewsDc" captionProperty="entityName"/>
                    <column id="transparency" editable="true" width="160"/>
                    <column id="sort" editable="true" sort="ASCENDING" width="100"/>
                </columns>
                <buttonsPanel>
                    <button id="btnPifAddDataSetView" caption="View verknüpfen" icon="ADD_ACTION" primary="true"/>
                    <button id="btnPifExclude" action="propertiesInFacadeTable.unlink"/>
                    <button id="btnPifSort" caption="sortieren" icon="SORT"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose" align="TOP_LEFT"/>
            <button id="btnConvertToLayerGroup" action="convertToLayerGroup"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
