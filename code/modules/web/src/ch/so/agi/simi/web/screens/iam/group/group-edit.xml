<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="Gruppen - Edit"
        focusComponent="form">
    <data>
        <instance id="groupDc"
                  class="ch.so.agi.simi.entity.iam.Group" view="group-edit">
            <loader/>
            <collection id="usersDc" property="users"/>
        </instance>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <layout expand="usersBox" spacing="true">
        <form id="form" dataContainer="groupDc">
            <column width="350px">
                <textField id="identifierField" property="identifier"/>
                <checkBox id="pubAsUserField" property="pubAsUser"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
            </column>
        </form>
        <groupBox id="usersBox" caption="msg://ch.so.agi.simi.entity.iam/Group.users">
            <table id="usersTable" dataContainer="usersDc" width="100%" height="100%" multiselect="true">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="identifier"/>
                    <column id="lastname"/>
                    <column id="firstname"/>
                </columns>
                <buttonsPanel>
                    <button action="usersTable.add" stylename="friendly"/>
                    <button action="usersTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
