<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="Featureinfo - Edit"
        focusComponent="form">
    <data>
        <instance id="featureInfoDc"
                  class="ch.so.agi.simi.entity.dependency.FeatureInfo">
            <view extends="_minimal">
                <property name="relations" view="_minimal">
                    <property name="relationType"/>
                    <property name="dataSetView" view="_minimal"/>
                </property>
                <property name="name"/>
                <property name="remarks"/>
                <property name="displayTemplate"/>
                <property name="pyModuleName"/>
                <property name="sqlQuery"/>
            </view>
            <loader/>
            <collection id="relationsDc" property="relations"/>
        </instance>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <layout expand="relationsBox" spacing="true">
        <form id="form" dataContainer="featureInfoDc">
            <column width="450px">
                <textField id="nameField" caption="Name" property="name"/>
                <textArea id="remarksField" caption="Bemerkungen" property="remarks" rows="5"/>
                <sourceCodeEditor id="displayTemplate" caption="Anzeige-Template" property="displayTemplate" showGutter="true" rowspan="10"/>
            </column>
            <column width="450px">
                <textField id="pyModuleNameField" caption="Python Modulname" property="pyModuleName"/>
                <sourceCodeEditor id="sqlQueryField" caption="SQL Abfrage" property="sqlQuery" showGutter="true" rowspan="10"/>
            </column>
        </form>
        <groupBox id="relationsBox" caption="Beziehungen">
            <fragment id="relations" screen="simiDependency_RelationsFragment"/>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
