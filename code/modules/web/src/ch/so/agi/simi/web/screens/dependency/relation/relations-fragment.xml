<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <instance id="relationsDc" class="ch.so.agi.simi.entity.dependency.Relation"
                  provided="true"/>
        <collection id="dataSetViewsDc" class="ch.so.agi.simi.entity.product.datasetview.DataSetView">
            <loader id="dataSetViewsDl">
                <query>
                    <![CDATA[select e from simiProduct_DataSetView e order by e.identifier]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <table id="relationsTable" dataContainer="relationsDc" width="100%" height="100%" editable="true">
            <actions>
                <action id="unlink" caption="Verknüpfung löschen" type="remove">
                    <properties>
                        <property name="confirmation" value="false"/>
                    </properties>
                </action>
            </actions>
            <columns>
                <column id="dataSetView" editable="true" caption="View" optionsContainer="dataSetViewsDc"/>
                <column id="relationType" caption="Beziehungstyp" sort="ASCENDING" editable="true"/>
            </columns>
            <buttonsPanel>
                <button id="btnAddRelation" caption="View verknüpfen" icon="ADD_ACTION" primary="true"/>
                <button action="relationsTable.unlink"/>
            </buttonsPanel>
        </table>
    </layout>
</fragment>
