<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://reportEdit.caption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.dependency.edit">
    <data>
        <instance id="reportDc"
                  class="ch.so.agi.simi.entity.dependency.Report">
            <view extends="_minimal">
                <property name="relations" view="_minimal">
                    <property name="relationType"/>
                    <property name="dataSetView" view="_minimal"/>
                </property>
                <property name="name"/>
                <property name="remarks"/>
            </view>
            <loader/>
            <collection id="relationsDc" property="relations"/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="reportDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
            </column>
        </form>
        <groupBox id="relationsBox" caption="Beziehungen">
            <table id="relationsTable" dataContainer="relationsDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="relationType"/>
                    <column id="dataSetView"/>
                </columns>
                <buttonsPanel>
                    <button action="relationsTable.create"/>
                    <button action="relationsTable.edit"/>
                    <button action="relationsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
