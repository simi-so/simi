<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="Abhängigkeiten"
        focusComponent="tableLookup">
    <data readOnly="true">
        <keyValueCollection id="tablesDc">
            <loader id="tablesDl">
                <query><!-- trim(' . ') is workaround to get a dot - did not work directly, no escape character for . findable -->
                    <![CDATA[
                    select
                        tbl.id,
                        concat(
                            db.dbName,
                            trim(' . '),
                            ms.schemaName,
                            trim(' . '),
                            tbl.tableName,
                            coalesce(
                                concat(' (', tv.identifier, ')'),
                                ''
                            )
                        )
                    from simiData_PostgresDB db
                        join db.modelSchemas ms
                        join ms.postgresTables tbl
                        left join tbl.tableViews tv
                    ]]>
                </query>
            </loader>
            <properties>
                <property name="id" datatype="uuid"/>
                <property name="repr" datatype="string"/>
            </properties>
        </keyValueCollection>
        <collection id="dependenciesDc"
                    class="ch.so.agi.simi.service.dependency.DependencyInfo">
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="dependenciesTable">
        <lookupField id="tableLookup" caption="Abhängigkeiten auflisten für:" optionsContainer="tablesDc"
                     captionProperty="repr"/>
        <hbox spacing="true">
            <textField id="fldTableName" property="Tabelle qualifiziert eingeben [Schemaname/Tabellenname]"/>
            <button id="btnTableName"/>
        </hbox>
        <table id="dependenciesTable"
               width="100%"
               dataContainer="dependenciesDc">
            <columns>
                <column id="objectName" caption="Name der Abhängigkeit"/>
                <column id="dependencyInfo" caption="Bezug zur Tabelle / Ebene"/>
                <column id="objectType" caption="Typ der Abhängigkeit"/>
            </columns>
        </table>
    </layout>
</window>
