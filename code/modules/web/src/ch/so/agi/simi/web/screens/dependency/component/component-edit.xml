<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="ModulabhÃ¤ngigkeit"
        focusComponent="form">
    <data>
        <instance id="componentDc"
                  class="ch.so.agi.simi.entity.dependency.Component">
            <view extends="_minimal">
                <property name="relations" view="_minimal">
                    <property name="relationType"/>
                    <property name="dataSetView" view="_minimal"/>
                </property>
                <property name="name"/>
                <property name="remarks"/>
            </view>
            <loader/>
            <collection id="relationsDc" property="relations"/>
        </instance>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <layout expand="relations" spacing="true">
        <form id="form" dataContainer="componentDc">
            <column width="350px">
                <textField id="nameField" caption="Name" property="name"/>
                <textArea id="remarksField" caption="Bemerkungen" property="remarks" rows="5"/>
            </column>
        </form>
        <fragment id="relations" screen="simi_RelationsFragment"/>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
