<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="AbhÃ¤ngigkeiten"
        focusComponent="tableViewsTable">
    <data readOnly="true">
        <keyValueCollection id="tablesDc">
            <loader id="tablesDl">
                <query>
                    <![CDATA[
                    select
                        tbl.id,
                        concat(
                            db.dbName,
                            '-',
                            ms.schemaName,
                            '-',
                            tbl.tableName,
                            coalesce(
                                concat(' (', tv.identifier, ')'),
                                ''
                            )
                        )
                    from simiData_PostgresDB db
                        join db.modelSchemas ms
                        join ms.postgresTables tbl
                        left join tbl.tableViews tv
                    ]]>
                </query>
            </loader>
            <properties>
                <property name="id" datatype="uuid"/><!-- tbl.tableName  tv.identifier    concat(tbl.tableName, nullif(concat(' (', tv.identifier, ')'),''))-->
                <property name="repr" datatype="string"/>
            </properties>
        </keyValueCollection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tableViewsTable"
            spacing="true">
        <table id="tableViewsTable"
               width="100%"
               dataContainer="tablesDc">
            <columns>
                <column id="id"/>
                <column id="repr"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
