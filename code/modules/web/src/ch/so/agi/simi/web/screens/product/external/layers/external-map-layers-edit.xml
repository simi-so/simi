<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="Externe WM(T)S Ebene(n)"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.product.external.layers">
    <data>
        <instance id="dataProductDc"
                  class="ch.so.agi.simi.entity.product.ExternalMapLayers"
                  view="externalMapLayers-edit">
            <loader/>
        </instance>
        <collection id="servicesDc"
                    class="ch.so.agi.simi.entity.product.ExternalMapService"
                    view="externalMapLayers-edit-services">
            <loader id="servicesDl">
                <query>
                    <![CDATA[select e from simiProduct_ExternalMapService e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="dataProductDc">
            <column width="450px">
                <lookupField id="serviceField" dataContainer="dataProductDc" property="service" optionsContainer="servicesDc"/>
                <textField id="identifierField" property="identifier" caption="Kennung GDI"/>
                <textField id="titleField" property="title" caption="Titel GDI"/>
                <textArea id="identifierListField" property="identifierList" caption="Kennung(en) extern" rows="3" rowspan="2"/>
                <fragment id="pubScopeFragment" screen="simiProduct_PubScopeFragment">
                    <properties>
                        <property name="filterProperty" value="forDSV"/>
                    </properties>
                </fragment>
                <textArea id="remarksField" property="remarks" rows="5" rowspan="3"/>
            </column>
            <column width="450px">
                <textArea id="descriptionField" property="description" rows="5" rowspan="3"/>
                <textField id="keywordsField" property="keywords"/>
                <textField id="synonymsField" property="synonyms"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>